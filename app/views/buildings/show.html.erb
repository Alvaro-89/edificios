<p id="notice"><%= notice %></p>

<p>
  <strong>ID edificio:</strong>
  <%= @building.id %>
</p>

<p>
  <strong>Nombre edificio:</strong>
  <%= @building.name %>
</p>

<p>
  <strong>Dirección:</strong>
  <%= @building.address %>
</p>

<p>
  <strong>Ciudad:</strong>
  <%= @building.city %>
</p>

<h4 class=mt-4>Departamentos</h4>

<table class='table table-hober'>
  <thead>
    <tr>
      <th class='text-center'>N° Departamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @building.apartments.each do |apartment| %>
      <tr>
        <td class="text-center"><%= apartment.apartment_number %></td>
        <td><%= link_to 'Editar', edit_apartment_path(apartment), class: "btn btn-outline-warning text-warning" %></td>
        <td><%= link_to 'Eliminar', apartment, class:'btn btn-outline-danger text-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mb-3 text-end">
  <%= link_to 'Volver', buildings_path, class: 'btn btn-light' %>
  <%= link_to 'Editar edificio', edit_building_path(@building), class: 'btn btn-secondary text-white' %> |
</div>
